<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_book_id_text"
        android:text="@string/show_book_id"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/show_book_id_view"
        android:layout_toRightOf="@id/show_book_id_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/show_book_id_text"
        android:id="@+id/show_book_name_text"
        android:text="@string/show_book_name"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/show_book_name_view"
        android:layout_below="@id/show_book_id_view"
        android:layout_toRightOf="@id/show_book_name_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/show_book_name_text"
        android:id="@+id/show_book_author_text"
        android:text="@string/show_book_author"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/show_book_author_view"
        android:layout_below="@id/show_book_name_view"
        android:layout_toRightOf="@id/show_book_author_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_book_public_text"
        android:layout_below="@id/show_book_author_text"
        android:text="@string/show_book_public"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/show_book_public_view"
        android:layout_below="@id/show_book_author_view"
        android:layout_toRightOf="@id/show_book_public_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_book_public_date_text"
        android:layout_below="@id/show_book_public_text"
        android:text="@string/show_book_public_date"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/show_book_public_date_view"
        android:layout_below="@id/show_book_public_view"
        android:layout_toRightOf="@id/show_book_public_date_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_book_reg_date_text"
        android:layout_below="@id/show_book_public_date_text"
        android:text="@string/show_book_reg_date"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/show_book_reg_date_view"
        android:layout_below="@id/show_book_public_date_view"
        android:layout_toRightOf="@id/show_book_reg_date_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_book_is_borrowed_text"
        android:layout_below="@id/show_book_reg_date_text"
        android:text="@string/show_is_borrowed"
       />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/show_book_is_borrowed_view"
        android:layout_below="@id/show_book_reg_date_view"
        android:layout_toRightOf="@id/show_book_is_borrowed_text"
     />
</RelativeLayout>